<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.noname.mapper.ArticleMapper" >
  <resultMap id="BaseResultMap" type="com.noname.entity.Article" >
    <id column="id" property="id" jdbcType="INTEGER" />
    <result column="type" property="type" jdbcType="VARCHAR" />
    <result column="title" property="title" jdbcType="VARCHAR" />
    <result column="view_count" property="viewCount" jdbcType="INTEGER" />
    <result column="like_count" property="likeCount" jdbcType="INTEGER" />
    <result column="create_date" property="createDate" jdbcType="TIMESTAMP" />
    <result column="main" property="main" jdbcType="VARCHAR" />
  </resultMap>

  <select id="selectAllByRule" resultMap="BaseResultMap">
    SELECT * FROM article
    <if test="rule != null">
      ${rule}
    </if>
  </select>

</mapper>